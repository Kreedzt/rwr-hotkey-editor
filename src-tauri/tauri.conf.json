{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "rwr-hotkey-editor",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true,
        "scope": [
          "$APP/*",
          "$DATA/*",
          "$CONFIG/*",
          "$CACHE/*",
          "$LOG/*",
          "$APPDATA/*"
        ]
      },
      "path": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.tauri.dev",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "rwr-hotkey-editor",
        "width": 1024,
        "height": 768,
        "visible": false
      },
      {
        "fullscreen": false,
        "resizable": true,
        "title": "rwr-hotkey-editor",
        "url": "splashscreen.html",
        "label": "splashscreen",
        "width": 1024,
        "height": 768,
        "decorations": false
      }
    ]
  }
}
